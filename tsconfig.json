{
  "compilerOptions": {
    "target": "ES2024",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@/backend/*": ["./src/backend/*"],
    }
  },
  "include": ["src/backend"],
  "exclude": ["node_modules", "dist", "src/frontend/**/*"]
}